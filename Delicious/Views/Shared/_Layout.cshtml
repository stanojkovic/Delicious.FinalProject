@using Delicious.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")

    <link rel="stylesheet" href="~/Content/lightbox/dist/css/lightbox.min.css">
    @Scripts.Render("~/bundles/modernizr")
</head>
@*style="background-image: linear-gradient(white, yellow);"*@
@*style="background-image: url(/Content/img/BluePattern.jpg);"*@
<body style="background-image: linear-gradient(white, #2989b9);">
    <nav class="navbar navbar-expand-sm navbar-dark fixed-top bg-dark">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"></button>
            <span class="text-danger"><i class="fa fa-birthday-cake wow animated bounce infinite" aria-hidden="true">&nbsp;&nbsp;&nbsp;</i></span>
            @Html.ActionLink("DELICIOUS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand text-muted wow animated pulse infinite" })
            <div class="navbar-collapse collapse" id="navbarSupportedContent">
                <ul class="nav navbar-nav mr-auto">
                    <li class="nav-item border border-light border-top-0 border-left-0 border-bottom-0">@Html.ActionLink("Početna", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item border border-light border-top-0 border-left-0 border-bottom-0">@Html.ActionLink("Kolači", "Index", "Recipes", new { area = "", kategorija = "Kolaci" }, new { @class = "nav-link" })</li>
                    <li class="nav-item border border-light border-top-0 border-left-0 border-bottom-0">@Html.ActionLink("Peciva", "Index", "Recipes", new { area = "", kategorija = "Peciva" }, new { @class = "nav-link" })</li>
                    <li class="nav-item border border-light border-top-0 border-left-0 border-bottom-0">@Html.ActionLink("Zdrava Hrana", "Index", "Recipes", new { area = "", kategorija = "Zdrava Hrana" }, new { @class = "nav-link" })</li>
                    <li class="nav-item border border-light border-top-0 border-left-0 border-bottom-0">@Html.ActionLink("O nama", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item border border-light border-top-0 border-left-0 border-bottom-0">@Html.ActionLink("Kontakt", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    @if (User.IsInRole(RolesConfig.USER))
                    {
                        <li class="nav-item border border-light border-top-0 border-left-0 border-bottom-0">@Html.ActionLink("Moji recepti", "MyRecipes", "Recipes", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <div class="container" >
        @RenderBody()

    </div>
    <footer class="page-footer font-small stylish-color-dark" style="background-color:#2c3e50;">
        <!-- Footer Links -->
        <div class="container text-center text-md-left">
            <!-- Grid row -->
            <div class="row">
                <!-- Grid column -->
                <div class="col-md-4 mx-auto">
                    <!-- Content -->
                    <h5 class="font-weight-bold text-uppercase mt-3 mb-4">Footer Content</h5>
                    <p>Spremanje kolača i torti je prava umestnost za one koje to vole, a slavlje za one koji su ljubitelji slatkiša.</p>
                    <p>Pogledajte i postanite pravi majstor svoje kuće poslastičarnice !</p>
                </div>
                <!-- Grid column -->
                <hr class="clearfix w-100 d-md-none">
                <!-- Grid column -->
                <div class="col-md-2 mx-auto">
                    <!-- Links -->
                    <h5 class="font-weight-bold text-uppercase mt-3 mb-4">Srodni sajtovi</h5>
                    <ul class="list-unstyled">
                        <li>
                            <a href="http://www.receptizakolace.rs/">Recepti za kolače</a>
                        </li>
                        <li>
                            <a href="http://www.kolaci-beograd.rs/">Kolači-Beograd</a>
                        </li>
                        <li>
                            <a href="https://tortekolaci.com/">Torte i Kolači</a>
                        </li>
                        <li>
                            <a href="http://www.recepti.com/">Recepti</a>
                        </li>
                    </ul>
                </div>
                <!-- Grid column -->
                <hr class="clearfix w-100 d-md-none">
                <!-- Grid column -->
                <div class="col-md-2 mx-auto">
                    <!-- Links -->
                    <h5 class="font-weight-bold text-uppercase mt-3 mb-4">Srodni sajtovi</h5>
                    <ul class="list-unstyled">
                        <li>
                            <a href="http://www.serpica.net/">Šeprica</a>
                        </li>
                        <li>
                            <a href="http://www.poslasticarnicapunto.com/">Poslastičarnica</a>
                        </li>
                        @*<li>
                            <a href="#!">Link 3</a>
                        </li>
                        <li>
                            <a href="#!">Link 4</a>
                        </li>*@
                    </ul>
                </div>
                <!-- Grid column -->
                <hr class="clearfix w-100 d-md-none">
                <!-- Grid column -->
                <div class="col-md-2 mx-auto">
                    <!-- Links -->
                    <h5 class="font-weight-bold text-uppercase mt-3 mb-4">Mapa sajta</h5>
                    <ul class="list-unstyled">



                        <li>@Html.ActionLink("Kolači", "Index", "Recipes", new { area = "", kategorija = "Kolaci" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Peciva", "Index", "Recipes", new { area = "", kategorija = "Peciva" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Zdrava Hrana", "Index", "Recipes", new { area = "", kategorija = "Zdrava Hrana" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("O nama", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    </ul>
                </div>
                <!-- Grid column -->
            </div>
            <!-- Grid row -->
        </div>
        <!-- Footer Links -->
        <hr>
        <!-- Call to action -->
        <ul class="list-unstyled list-inline text-center py-2">
            <li class="list-inline-item">
                <h5 class="mb-1">Registrujte se !</h5>
            </li>
            <li class="list-inline-item">
                @Html.ActionLink("Sign up!", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "text-white btn btn-danger btn-rounded" })
                @*<a href="#!" class="btn btn-danger btn-rounded">Sign up!</a>*@
            </li>
        </ul>
        <!-- Call to action -->
        <hr>
        <!-- Social buttons -->
        <ul class="list-unstyled list-inline text-center">
            <li class="list-inline-item">
                <a class="btn-floating btn-fb mx-1">
                    <i class="fa fa-facebook"> </i>
                </a>
            </li>
            <li class="list-inline-item">
                <a class="btn-floating btn-tw mx-1">
                    <i class="fa fa-twitter"> </i>
                </a>
            </li>
            <li class="list-inline-item">
                <a class="btn-floating btn-gplus mx-1">
                    <i class="fa fa-google-plus"> </i>
                </a>
            </li>
            <li class="list-inline-item">
                <a class="btn-floating btn-li mx-1">
                    <i class="fa fa-linkedin"> </i>
                </a>
            </li>
            <li class="list-inline-item">
                <a class="btn-floating btn-dribbble mx-1">
                    <i class="fa fa-dribbble"> </i>
                </a>
            </li>
        </ul>
        <hr>
        <!-- Social buttons -->
        <!-- Copyright -->
        <div class="footer-copyright text-center">
            © 2018 Copyright:
            <a href="https://mdbootstrap.com/bootstrap-tutorial/"> StariAsovi</a>
        </div>
        <!-- Copyright -->
    </footer>
    <!-- Footer -->

    <script src="~/Content/lightbox/dist/js/lightbox-plus-jquery.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @*@Scripts.Render("~/bundles/mdb")*@
    @RenderSection("scripts", required: false)
</body>
</html>
