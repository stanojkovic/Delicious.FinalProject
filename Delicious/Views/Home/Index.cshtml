<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/Content/img/Cake01.jpg" alt="First slide">
            <div class="carousel-caption d-none d-md-block text-danger">
                <h2 class="display-4" style="text-shadow: 2px 1px 3px #000;">Rođendanske Torte</h2>
                <h3 style="text-shadow: 2px 1px 3px #000;">Provereni recepti za torte !</h3>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/img/zdrava04.jpg" alt="Second slide">
            <div class="carousel-caption d-none d-md-block text-success">
                <h2 class="display-4" style="text-shadow: 2px 1px 3px #000;">Zdrava Hrana</h2>
                <h3 style="text-shadow: 2px 1px 3px #000;">Recepti i informacije o zdravoj hrani !</h3>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/img/bakery01.jpg" alt="Third slide">
            <div class="carousel-caption d-none d-md-block text-warning">
                <h2 class="display-4" style="text-shadow: 2px 1px 3px #000;">Lisnato pecivo</h2>
                <h3 style="text-shadow: 2px 1px 2px #fff;">Fino slano lisnato pecivo !</h3>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>



<!-- Grid row -->
<div class="row mt-4">
    <!-- Grid column -->
    <div class="col-lg-4 col-md-12">
        <!--Card-->
        <div class="card wow animated slideInLeft" style="background-image: linear-gradient(white, #ff8800);">
            <!--Card image-->
            <div class="view">
                <img src="~/Content/img/bakery03.jpg" class="card-img-top" alt="photo">
                <a href="#">
                    <div class="mask rgba-white-slight"></div>
                </a>
            </div>
            <!--Card content-->
            <div class="card-body" style="color:white;">
                <!--Title-->
                <h4 class="card-title">Lisnato pecivo</h4>
                <!--Text-->
                <p class="card-text">Fino slano lisnato pecivo izmamiće sve pohvale vaših ukućana. Idealno, kako za doručak ili užinu, tako i za prelepo posluženje za večernja druženja s prijateljima. </p>
               
                @Html.ActionLink("Posetite strtanicu", "Index", "Recipes", new { area = "", kategorija = "Peciva" }, new { @class = "nav-link btn btn-warning" })
               
            </div>
        </div>
        <!--/.Card-->
    </div>
    <!-- Grid column -->
    <!-- Grid column -->
    <div class="col-lg-4 col-md-6">
        <!--Card-->
        <div class="card wow animated slideInDown" style="background-image: linear-gradient(white, #b59100);">
            <!--Card image-->
            <div class="view">
                <img src="~/Content/img/Cake05.jpg" class="card-img-top" alt="photo">
                <a href="#">
                    <div class="mask rgba-white-slight"></div>
                </a>
            </div>
            <!--Card content-->
            <div class="card-body elegant-color" style="color:white;">
                <!--Title-->
                <h4 class="card-title">Kolači i torte</h4>
                <!--Text-->
                <p class="card-text white-text">Tražite recepte za Kolače? Došli ste na pravo mesto. Najveći kuvar sa savetima i receptima za one kojima je hrana više od osnovne potrebe.</p>
                @Html.ActionLink("Posetite strtanicu", "Index", "Recipes", new { area = "", kategorija = "Kolači" }, new { @class = "nav-link btn btn-danger" })
                @*<a href="#" class="btn btn-outline-white btn-md waves-effect">Button</a>*@
            </div>
        </div>
        <!--/.Card-->
    </div>
    <!-- Grid column -->
    <!-- Grid column -->
    <div class="col-lg-4 col-md-6">
        <!--Panel-->
        <div class="card wow animated slideInLeft" style="background-image: linear-gradient(white, #7dc14c);">
            <!--Card image-->
            <div class="view">
                <img src="~/Content/img/zdrava03.jpg" class="card-img-top" alt="photo">
                <a href="#">
                    <div class="mask rgba-white-slight"></div>
                </a>
            </div>
            <!--Card content-->
            <div class="card-body" style="color:white;">
                <!--Title-->
                <h4 class="card-title">Zdrava Hrana</h4>
                <!--Text-->
                <p class="card-text">Portal zdrave ishrane - saveti, recepti i informacije o zdravoj hrani.</p>

                @Html.ActionLink("Posetite strtanicu", "Index", "Recipes", new { area = "", kategorija = "Zdrava Hrana" }, new { @class = "nav-link btn btn-success" })

            </div>
        </div>
        <!--/.Panel-->
    </div>
    <!-- Grid column -->
</div>
